{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,  // ✅ デコレーターを有効化
    "emitDecoratorMetadata": true    // ✅ メタデータの出力を有効化
  },
  "include": ["src"]
}
